<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

  <template id="address_created" name="Shopinvader address created email">
    <t t-call="shopinvader_notification_default.email_layout">
      <t t-set="mail_title">Address created</t>
      <t t-set="main_content">
        A new address has been added to your account.
      </t>
    </t>
  </template>

  <template id="address_modified" name="Shopinvader address modified email">
    <t t-call="shopinvader_notification_default.email_layout">
      <t t-set="mail_title">Address modified</t>
      <t t-set="main_content">
        Your address has been modified.
      </t>
    </t>
  </template>

</odoo>
