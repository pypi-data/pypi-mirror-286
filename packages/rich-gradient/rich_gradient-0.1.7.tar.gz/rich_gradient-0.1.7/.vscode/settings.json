{
    "search.useIgnoreFiles": false,
    "files.exclude": {
        "**/.git": false,
        "**/.svn": false,
        "**/CVS": false
    },
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnusedImport": false
    },
    "python.testing.pytestArgs": [
        "tests",
        "--color=yes"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "markdownlint.config": {
        "default": true,
        "MD013": false,
        "MD033": false,
       }
}