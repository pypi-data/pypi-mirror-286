{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "rettij Channel Schema",
  "description": "Schema for a channel defined in a topology.yml file of rettij",
  "@id": "rettij:channel_schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id"
  ],
  "properties": {
    "__line__":{
      "type": "number",
      "description": "Line numbers of the parsed topology added by YamlLoaderWithLineNumbers."
    },
    "id": {
      "type": "string",
      "description": "The id of the channel."
    },
    "data-rate": {
      "type": "string",
      "description": "The data-rate of the channel."
    },
    "delay": {
      "type": "string",
      "description": "The delay of the channel."
    }
  }
}